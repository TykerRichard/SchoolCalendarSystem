<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TermName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/textview"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/TermButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TermStartDate"
        android:layout_width="66dp"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/start_date"
        app:layout_constraintStart_toEndOf="@+id/TermButton"
        app:layout_constraintTop_toBottomOf="@+id/TermName" />

    <TextView
        android:id="@+id/TermEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/end_date"
        app:layout_constraintStart_toEndOf="@+id/TermButton"
        app:layout_constraintTop_toBottomOf="@+id/TermStartDate" />

    <TextView
        android:id="@+id/TermStateDateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/textview"
        app:layout_constraintStart_toEndOf="@+id/TermStartDate"
        app:layout_constraintTop_toBottomOf="@+id/TermName" />

    <TextView
        android:id="@+id/TermEndDateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/textview"
        app:layout_constraintStart_toEndOf="@+id/TermStartDate"
        app:layout_constraintTop_toBottomOf="@+id/TermStateDateField" />

    <TextView
        android:id="@+id/TermButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/Term_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>